<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_projet_3_faria"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android_projet_3_faria.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android_projet_3_faria.AfficheListePatient"
            android:label="@string/title_activity_affiche_liste_patient"
            android:parentActivityName="com.example.android_projet_3_faria.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android_projet_3_faria.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android_projet_3_faria.ModificationPatient"
            android:label="@string/title_activity_modification_patient"
            android:parentActivityName="com.example.android_projet_3_faria.AfficheListePatient" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android_projet_3_faria.AfficheListePatient" />
        </activity>
        <activity
            android:name="com.example.android_projet_3_faria.ActImport"
            android:label="@string/title_activity_act_import"
            android:parentActivityName="com.example.android_projet_3_faria.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android_projet_3_faria.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android_projet_3_faria.ActExport"
            android:label="@string/title_activity_act_export"
            android:parentActivityName="com.example.android_projet_3_faria.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android_projet_3_faria.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android_projet_3_faria.Accueil"
            android:label="@string/title_activity_accueil" >
        </activity>
    </application>

</manifest>